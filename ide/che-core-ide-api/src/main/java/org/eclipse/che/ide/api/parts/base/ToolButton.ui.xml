<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>

        .controlPanel {
            float: right;
            overflow: hidden;

            position: relative;
            top: 1px;
            margin: 2px 0 0 2px;
            padding: 0 3px 0 3px;

            -moz-box-sizing: border-box !important;
            box-sizing: border-box !important;

            -webkit-user-select: none;
            user-select: none;
        }

        .button {
            padding: 0 3px 0 3px;
            margin: 1px 0 1px 0;
            cursor: pointer;
        }

        .button:HOVER,
        .button:ACTIVE {
            -webkit-box-shadow: 0 0 2px rgba(50, 50, 50, 1);
            -moz-box-shadow: 0 0 2px rgba(50, 50, 50, 1);
            box-shadow: 0 0 2px rgba(50, 50, 50, 1);
            border-radius: 2px;
        }

        .button:ACTIVE {
            -webkit-transform: scale(0.9);
            -moz-transform: scale(0.9);
            transform: scale(0.9);
            background-color: rgb(97, 125, 145);
        }

        .iconPanel {
        }

    </ui:style>

    <g:HTML styleName="{style.controlPanel}" ui:field="controlPanel">
        <div class="{style.button}" ui:field="buttonPanel">
            <div class="{style.iconPanel}" ui:field="iconPanel"></div>
        </div>
    </g:HTML>

</ui:UiBinder>
