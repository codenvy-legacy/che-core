<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>

        .controlPanel {
            float: left;
            overflow: hidden;

            -moz-box-sizing: border-box !important;
            box-sizing: border-box !important;

            -webkit-user-select: none;
            user-select: none;
        }

        .button {
            bottom: 2px;
            left: 2px;
            overflow: hidden;
            position: absolute;
            right: 4px;
            top: 4px;
            border-radius: 2px;
        }

        .button:HOVER {
            -webkit-box-shadow: 0px 0px 2px rgba(50, 50, 50, 1);
            -moz-box-shadow: 0px 0px 2px rgba(50, 50, 50, 1);
            box-shadow: 0px 0px 2px rgba(50, 50, 50, 1);
        }

        .button:ACTIVE {
            -webkit-transform: scale(0.9);
            -moz-transform: scale(0.9);
            transform: scale(0.9);
        }

        .iconPanel {
            bottom: 0px;
            left: 0px;
            overflow: hidden;
            position: absolute;
            right: 0px;
            top: 0px;
        }

    </ui:style>

    <g:HTML styleName="{style.controlPanel}" ui:field="controlPanel">
        <div class="{style.button}" ui:field="buttonPanel">
            <div class="{style.iconPanel}" ui:field="iconPanel"></div>
        </div>
    </g:HTML>

</ui:UiBinder>
