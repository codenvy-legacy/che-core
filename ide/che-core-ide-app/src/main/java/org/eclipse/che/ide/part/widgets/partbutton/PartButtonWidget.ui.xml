<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .main {
            width: 82px;
            height: 17px;
            font-size: 11px;
            cursor: pointer;
            float: left;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 1);
        }

        .main:hover {
            background: #818181 !important;
        }

        .main::before {
            content: "";
            width: 100%;
            height: 1px;
            background: #47afdd;
        }

        .icon {
            float: left;
        }

        .label {
            margin-top: 2px;
            float: left;
        }
    </ui:style>

    <g:DockLayoutPanel addStyleNames="{style.main}">
        <g:west size="20">
            <g:SimplePanel ui:field="icon" addStyleNames="{style.icon}"/>
        </g:west>
        <g:center>
            <g:Label ui:field="buttonName" addStyleNames="{style.label}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>