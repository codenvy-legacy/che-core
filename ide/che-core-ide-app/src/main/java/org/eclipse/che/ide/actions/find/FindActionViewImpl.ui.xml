<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:DockLayoutPanel unit="PCT" width="400px" height="50px">
        <g:north size="50">
            <g:HorizontalPanel>
                <g:cell width="50%" verticalAlignment="ALIGN_MIDDLE">
                    <g:Label>Enter action name:</g:Label>
                </g:cell>
                <g:cell width="50%" verticalAlignment="ALIGN_MIDDLE">
                    <g:CheckBox ui:field="includeNonMenu" text="Include non menu actions"/>
                </g:cell>
            </g:HorizontalPanel>
        </g:north>
        <g:south size="50">
            <g:TextBox ui:field="nameField" width="394px" height="18px"/>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>