<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='resources' type='org.eclipse.che.ide.workspace.WorkBenchResources'/>
    <ui:image field="placeholder" src="codenvy-placeholder.png"/>

    <ui:style>

        /*@eval bgColor org.eclipse.che.ide.api.theme.Style.getPartBackground();*/
        @eval editorPanelBackgroundColor org.eclipse.che.ide.api.theme.Style.getEditorPanelBackgroundColor();

        @sprite .bg {
            gwt-image: "placeholder";
            /*background-color: bgColor;*/
            /*background-color: #21252b;*/
            background-color: editorPanelBackgroundColor;
            background-position: center;
        }

    </ui:style>

    <g:DockLayoutPanel unit="PX" width="100%" height="100%" addStyleNames="{resources.workBenchCss.ideWorkBenchParentPanel}">
        <g:east size="24">
            <g:FlowPanel ui:field="rightPanel" addStyleNames="{resources.workBenchCss.ideWorkBenchToolPanelRight}"/>
        </g:east>
        <g:west size="24">
            <g:FlowPanel ui:field="leftPanel" addStyleNames="{resources.workBenchCss.ideWorkBenchToolPanelLeft}"/>
        </g:west>
        <g:south size="24">
            <g:FlowPanel ui:field="bottomPanel" addStyleNames="{resources.workBenchCss.ideWorkBenchToolPanelBottom}"/>
        </g:south>
        <g:center>
            <g:SplitLayoutPanel ui:field="splitPanel" width="100%" height="100%">
                <g:south size="0">
                    <g:SimplePanel ui:field="infoPanel" width="100%" height="100%"
                                   addStyleNames="{resources.workBenchCss.ideWorkBenchSplitPanelBottom}"/>
                </g:south>
                <g:west size="0">
                    <g:SimplePanel ui:field="navPanel" width="100%" height="100%"
                                   addStyleNames="{resources.workBenchCss.ideWorkBenchSplitPanelLeft}"/>
                </g:west>
                <g:east size="0">
                    <g:SimplePanel ui:field="toolPanel" width="100%" height="100%"/>
                </g:east>
                <g:center>
                    <g:ScrollPanel debugId="editorPanel" ui:field="editorPanel" width="100%" height="100%" addStyleNames="{style.bg}"/>
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
