<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .selectedElementName {
            float: left;
            padding-left: 10px;
            padding-bottom: 5px;
            padding-right: 5px;
            margin-top: 3px !important;

        }

        .selectedElementImage svg {
            width: 19px;
            height: 19px;
            fill: #dbdbdb;
        }

        .svgMarker {
            position: absolute;
            margin-left: 0;
            z-index: 0;
        }

        .imagePanel {
            float: right;
            position: absolute;
            z-index: 1;
            width: 16px;
            height: 16px;
        }

        .container div {
            margin-left: 0;
        }

        .imageContainer div {
            margin-top: 0;
        }

        .imageContainer {
            position: absolute;
            z-index: 1;
            width: 19px;
            height: 19px;
        }
    </ui:style>

    <g:FlowPanel ui:field="listHeader">
        <g:FlowPanel ui:field="selectedElement" addStyleNames="{style.container}">
            <g:SimpleLayoutPanel addStyleNames="{style.imageContainer}">
                <g:SimpleLayoutPanel ui:field="selectedElementImage" addStyleNames="{style.selectedElementImage}"/>
            </g:SimpleLayoutPanel>
            <g:Label ui:field="selectedElementName" addStyleNames="{style.selectedElementName}"/>
        </g:FlowPanel>

        <g:SimpleLayoutPanel addStyleNames="{style.imagePanel}">
            <g:SimpleLayoutPanel ui:field="marker" addStyleNames="{style.svgMarker}"/>
        </g:SimpleLayoutPanel>
    </g:FlowPanel>
</ui:UiBinder>