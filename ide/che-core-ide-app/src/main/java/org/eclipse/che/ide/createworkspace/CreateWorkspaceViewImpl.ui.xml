<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="locale" type="org.eclipse.che.ide.CoreLocalizationConstant"/>

    <ui:style>        
        .emptyBorder {
            margin: 6px;
        }

        .inputField {
            background-color: #272727;
            color: #dbdbdb;
            border: 1px solid #191c1e;
            border-radius: 1px;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.19) inset, 0 1px 0 0 rgba(223, 223, 223, 0.4);
            font-size: 12px;
            padding-left: 8px;
            height: 20px;
        }

        .label {
            line-height: 25px;
        }

        .floatLeft {
            float: left;
        }

        .floatRight {
            float: right;
        }

        .errorHint {
            color: red;
            height: 12px;
            margin: 10px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" width="500px" height="165px" addStyleNames="{style.emptyBorder}">
        <g:north size="55">
            <g:FlowPanel>
                <g:Label text="{locale.createWsName}" addStyleNames="{style.label} {style.floatLeft}"/>
                <g:TextBox width="400px" ui:field="wsName" debugId="createMachineView-machineName" addStyleNames="{style.inputField}
                                                                                                                       {style.floatRight}"/>
                <g:Label visible="false" ui:field="nameError" text="{locale.createWsNameIsNotCorrect}" addStyleNames="{style.errorHint}
                                                                                                                       {style.floatRight}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="55">
            <g:FlowPanel>
                <g:Label text="{locale.createWsRecipeUrl}" addStyleNames="{style.label} {style.floatLeft}"/>
                <g:TextBox width="400px" ui:field="recipeURL" debugId="createMachineView-recipeURL" addStyleNames="{style.inputField}
                                                                                                                   {style.floatRight}"/>
                <g:Label visible="false" ui:field="recipeUrlError" text="{locale.createWsUrlNotValid}" addStyleNames="{style.errorHint}
                                                                                                                 {style.floatRight}"/>
            </g:FlowPanel>
        </g:north>
        <g:south size="55">
            <g:FlowPanel>
                <g:Label text="{locale.createWsFindByTags}" addStyleNames="{style.label} {style.floatLeft}"/>
                <g:TextBox width="400px" ui:field="tags" debugId="createMachineView-tags" addStyleNames="{style.inputField}
                                                                                                         {style.floatRight}"/>
                <g:Label visible="false" ui:field="tagsError" text="{locale.createWsRecipeNotFound}" addStyleNames="{style.errorHint}
                                                                                                                       {style.floatRight}"/>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>