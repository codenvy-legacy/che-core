<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .tabsPanel {
            margin-top: 3px;
            background: #373737;
            border-bottom: 1px solid #232323;
        }

        .contentPanel {
            border-left: 3px solid #4D7191;
            border-top: 3px solid #4D7191;
        }
    </ui:style>

    <g:DockLayoutPanel ui:field="parent" unit="PX" width="100%" height="100%">
        <g:north size="26">
            <g:FlowPanel ui:field="tabsPanel" addStyleNames="{style.tabsPanel}" debugId="editorPartStack-tabsPanel"/>
        </g:north>
        <g:center>
            <g:DeckLayoutPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}" debugId="editorPartStack-contentPanel"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>