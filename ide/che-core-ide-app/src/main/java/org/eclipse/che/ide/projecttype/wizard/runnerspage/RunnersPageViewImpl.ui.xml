<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='locale' type='org.eclipse.che.ide.CoreLocalizationConstant'/>
    <ui:style>
        @eval InputBackgroundColor org.eclipse.che.ide.api.theme.Style.getInputBackground();
        .mainDoc {
            /*margin: 15px;*/
            width: 100%;
            height: 100%;
        }

        .labelPosition {
            position: relative;
            line-height: 29px;
            /*margin-left: 20px;*/

        }

        .gwt-TextBox {
            background-color: InputBackgroundColor;
            color: #dbdbdb;
            border: 1px solid #191c1e;
            border-radius: 1px;
            box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.19) inset, 0px 1px 0px 0px rgba(223, 223, 223, 0.4);
            font-size: 12px;
            padding-left: 8px;
            height: 20px;
            text-align: center;
        }

        .treeContainer {
            margin: 5px;
            position: relative;
            border: 1px solid InputBackgroundColor;
            height: 425px;
        }

        .margin {
            margin-left: 6px;
        }

        .noEnvLabel {
            cursor: default;
            line-height: 350px;
            text-align: center;
            width: 100%;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 1);
        }
    </ui:style>
    <g:DockLayoutPanel unit="PCT" debugId="mavenPageView-mainPanel" addStyleNames="{style.mainDoc}">
        <g:west size="50">
            <g:FlowPanel>
                <g:Label text="Select Runner environment:"
                         addStyleNames="{style.labelPosition} {style.margin}"/>
                <g:Label ui:field="noEnvLabel" text="No environments available" addStyleNames="{style.noEnvLabel}"/>
                <g:ScrollPanel ui:field="treeContainer" debugId="selectRunnerPage-treeContainer" addStyleNames="{style.treeContainer}"/>
            </g:FlowPanel>
        </g:west>
        <g:east size="50">
            <g:DockLayoutPanel unit="PX">
                <g:north size="250">
                    <g:FlowPanel>
                        <g:Label text="Runner environment description:"
                                 addStyleNames="{style.labelPosition}"/>
                        <g:TextArea ui:field="runnerDescription" enabled="false" width="356px" height="200px"
                                    debugId="selectRunnerPage-runnerDescription">
                        </g:TextArea>
                    </g:FlowPanel>
                </g:north>
            </g:DockLayoutPanel>
        </g:east>
    </g:DockLayoutPanel>
</ui:UiBinder>
