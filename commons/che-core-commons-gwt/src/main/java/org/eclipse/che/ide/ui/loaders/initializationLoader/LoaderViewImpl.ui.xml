<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:p1='urn:import:com.google.gwt.user.cellview.client'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="resources" type="org.eclipse.che.ide.ui.loaders.LoaderResources"/>

    <ui:style>
        .pinion > i {
            top: 8px;
            left: 4px;
        }

        .pinion i:last-of-type {
            top: 12px;
            left: 17px;
        }

        .detailsPanel {
            height: 217px;
            background-color: #272727;
        }

        .detailsTable tr,
        .detailsTable td {
            background-color: #272727 !important;

            border-width: 2px;
            border-style: solid;
            border-color: transparent;
        }

        .animate {
            transition: width 0.25s  linear, height 0.25s linear;
            overflow: hidden;
        }

        .button {
            margin-top: 7px;
            margin-right: 12px;
            width: 80px;
            height: 25px;
            float: right;
        }

        .operationPanel {
            margin-left: 8px;
        }

        .operationPanel td {
            width: 60px;
        }

    </ui:style>

    <g:DockLayoutPanel unit="PX" addStyleNames="{style.animate}">
        <g:north size="65">
            <g:FlowPanel addStyleNames="{style.operationPanel}">
                <g:Grid>
                    <g:row>
                        <g:customCell>
                            <g:HTML styleName="{style.pinion}" addStyleNames="{resources.Css.pinion}">
                                <i></i>
                                <i></i>
                            </g:HTML>
                        </g:customCell>
                        <g:customCell>
                            <g:SimplePanel ui:field="operationPanel"/>
                        </g:customCell>
                    </g:row>
                    <g:row>
                        <g:customCell>
                            <g:FlowPanel ui:field="expandPanel" debugId="expandPanel">
                                <g:FlowPanel ui:field="expandHolder"/>
                                <g:Label text="Details"/>
                            </g:FlowPanel>
                        </g:customCell>
                    </g:row>
                </g:Grid>
            </g:FlowPanel>
        </g:north>
        <g:north size="249">
            <g:FlowPanel ui:field="detailsArea">
                <g:ScrollPanel ui:field="scroll" styleName="{style.detailsPanel}">
                    <p1:CellTable width="100%" ui:field="detailsTable" focus="false" styleName="{style.detailsTable}"/>
                </g:ScrollPanel>
                <g:Button text="Close" addStyleNames="{style.button}" ui:field="closeButton" debugId="closeButton"/>
            </g:FlowPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>
